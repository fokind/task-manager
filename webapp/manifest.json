{
	"sap.app": {
		"id": "fokind.kanban",
		"type": "application",
		"applicationVersion": {
			"version": "1.0.0"
		},
		"dataSources": {
    	  "default": {
    		"uri": "/odata/",
    		"type": "OData",
    		"settings": {
    		  "odataVersion": "2.0"
    		}
    	  }
		}
	},
	"sap.ui5": {
		"dependencies": {
			"libs": {
				"sap.m": {}
			}
		},
		"models": {
    	  "odata": {
    		"dataSource": "default",
                    "settings" : {
                        "autoExpandSelect" : false,
                        "operationMode" : "Server",
                        "synchronizationMode" : "None",
                        "groupId": "$direct"
                    },
                    "type" : "sap.ui.model.odata.v4.ODataModel"
    	  },
			"": {
				"type": "sap.ui.model.json.JSONModel",
				"uri": "./data/data.json"
			}
		},
		"rootView": {
			"viewName": "fokind.kanban.view.App",
			"type": "XML"
		},
		"routing": {
			"config": {
				"routerClass": "sap.m.routing.Router",
				"viewType": "XML",
				"viewPath": "fokind.kanban.view",
				"controlId": "app",
				"controlAggregation": "pages",
				"async": true
			},
			"routes": [
			    {
					"pattern": "",
					"name": "projects",
					"target": "projects"
				},
			    {
					"pattern": "kanban/{id}",
					"name": "kanban",
					"target": "kanban"
				}
		    ],
			"targets": {
				"projects": {
					"viewName": "Projects",
					"viewLevel": 1
				},
				"kanban": {
					"viewName": "Kanban",
					"viewLevel": 2
				}
			}
		}
	}
}