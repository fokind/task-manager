<View controllerName="fokind.kanban.controller.ProjectEdit" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:form="sap.ui.layout.form" 
	xmlns="sap.m" displayBlock="true">
	<Page title="Project: {draft>/title}" showNavButton="true" navButtonPress="onBackPress">
		<headerContent>
			<Button icon="sap-icon://delete" press="onDeleteProjectPress"/>
			<Button icon="sap-icon://save" press="onSavePress"/>
		</headerContent>
		<form:SimpleForm editable="true" layout="ResponsiveGridLayout">
			<form:content>
				<Label text="Title"/>
				<Input value="{draft>/title}"/>
				<Label text="States"/>
				<MultiInput tokens="{
						model: 'draft',
						path: '/States',
						sorter: {
							path: 'order'
						}
					}" showValueHelp="false" submit="onStatesSumbmit">
					<tokens>
						<Token text="{draft>title}" press="onStatePress" delete="onStateDelete"/>
					</tokens>
				</MultiInput>
			</form:content>
		</form:SimpleForm>
	</Page>
</View>
