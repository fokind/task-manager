<View controllerName="fokind.kanban.controller.ProjectEdit" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:form="sap.ui.layout.form" 
	xmlns="sap.m" displayBlock="true">
	<Page title="Project: {draft>/title}" showNavButton="true" navButtonPress="onBackPress">
		<headerContent>
			<Button icon="sap-icon://save" press="onSavePress" />
		</headerContent>
		<form:SimpleForm editable="true" layout="ResponsiveGridLayout">
			<form:content>
				<Label text="Title"/>
				<Input value="{draft>/title}"/>
				<Label text="States"/>
				<MultiInput tokens="{draft>/States}" showValueHelp="false" submit="onStatesSumbmit">
					<tokens>
						<Token text="{draft>title}"/>
					</tokens>
				</MultiInput>
			</form:content>
		</form:SimpleForm>
	</Page>
</View>
