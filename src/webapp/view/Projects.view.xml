<View controllerName="fokind.kanban.controller.Projects" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" displayBlock="true">
	<Page title="Projects">
		<headerContent>
			<Button icon="sap-icon://add" press="onAddPress" />
		</headerContent>
		<Table items="{/Projects}" id="projects">
			<columns>
				<Column>
					<Text text="Title" />
				</Column>
			</columns>
			<ColumnListItem type="Navigation" press="onItemPress">
				<Text text="{title}" wrapping="false"/>
			</ColumnListItem>
		</Table>
	</Page>
</View>
