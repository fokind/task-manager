<View controllerName="fokind.kanban.controller.Kanban" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:grid="sap.ui.layout.cssgrid" 
	xmlns:dnd="sap.ui.core.dnd" 
	xmlns="sap.m" displayBlock="true">
	<Page title="Project: {title}" showNavButton="true" navButtonPress="onBackPress">
		<headerContent>
			<Button icon="sap-icon://edit" press="onEditPress" />
			<Button icon="sap-icon://add" press="onAddPress" />
		</headerContent>
		<grid:CSSGrid gridTemplateColumns="repeat(3, 1fr)" items="{
				model: 'draft',
				path: '/States',
				templateShareable: true
			}">
			<List items="{
					model: 'draft',
					path: 'Tasks',
					templateShareable: false
				}">
				<headerToolbar>
					<Toolbar>
						<Title text="{draft>title}"/>
					</Toolbar>
				</headerToolbar>
				<dragDropConfig>
					<dnd:DragInfo groupName="taskList" sourceAggregation="items"/>
					<dnd:DropInfo groupName="taskList" targetAggregation="items" dropPosition="Between" drop="onDrop"/>
					<dnd:DragDropInfo sourceAggregation="items" targetAggregation="items" dropPosition="Between" drop="onDrop"/>
				</dragDropConfig>
				<StandardListItem title="{draft>title}" type="Active" press="onDetailPress"/>
			</List>
		</grid:CSSGrid>
	</Page>
</View>
