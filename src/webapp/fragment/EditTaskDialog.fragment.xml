<core:FragmentDefinition xmlns="sap.m" 
	xmlns:form="sap.ui.layout.form" 
	xmlns:core="sap.ui.core">
	<Dialog id="editTaskDialog" title="State">
		<content>
			<form:SimpleForm editable="true" layout="ResponsiveGridLayout">
				<form:content>
					<Label text="Title"/>
					<Input value="{task>/title}"/>
				</form:content>
			</form:SimpleForm>
		</content>
		<beginButton>
			<Button text="OK" press=".onEditTaskOkPress"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" press=".onEditTaskCancelPress"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>
